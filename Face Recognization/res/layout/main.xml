<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RelativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center|center_vertical"
	android:orientation="vertical">

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button android:id="@+id/btn_record" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:text="记录" />

		<Button android:id="@+id/btn_recognize" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:text="识别" />
	</LinearLayout>

</RelativeLayout>